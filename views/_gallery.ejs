<% if (photos.length === 0) { %>
  <div class="muted">No uploads yet. Add the first image above.</div>
<% } else { %>
  <div class="gallery">
    <% photos.forEach(p => { %>
      <button
        class="thumbBtn"
        type="button"
        hx-get="/photos/<%= p._id %>"
        hx-target="#detailPane"
        hx-swap="innerHTML"
        aria-label="View <%= p.title || p.originalName %>"
        title="View details"
      >
        <img
          class="thumb"
          src="/uploads/thumbs/<%= p.thumbFile %>"
          alt="<%= p.title || p.originalName %>"
          loading="lazy"
        />
      </button>
    <% }) %>
  </div>
<% } %>
